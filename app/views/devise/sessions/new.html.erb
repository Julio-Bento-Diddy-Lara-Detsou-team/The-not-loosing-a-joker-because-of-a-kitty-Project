<!-- Page title-->
<h2 class="h1 text-center">Se connecter</h2>

<!-- Sign in form -->
<div class="row justify-content-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'col-12') do |f| %>
    <!-- Input email -->
    <div class="form-group">
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text"><i class="fas fa-user"></i></span>
        </div>
        <label for="inputEmail" class="sr-only">Email</label>
        <%= f.email_field :email, autofocus: true, required: true, autocomplete: "email", placeholder: 'Email', class: 'form-control' %>
      </div>
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>

    <!-- Input password -->
    <div class="form-group">
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text"><i class="fas fa-key"></i></span>
        </div>
        <label for="inputPassword" class="sr-only">Password</label>
        <%= f.password_field :password, required: true, autocomplete: "current-password", placeholder: 'Mot de passe', class: 'form-control' %>
      </div>
    </div>

    <!-- Input remember me -->
    <% if devise_mapping.rememberable? %>
      <div class="form-group">
        <%= f.check_box :remember_me, class: 'ml-3 mr-1 my-auto' %>
        <%= f.label "Rester connectÃ©", class: 'my-auto' %>
      </div>
    <% end %>

    <!-- Submit button -->
    <div class="form-group admin-connect col-12">
      <button class="btn btn-primary btn-block" type="submit"><i class="fas fa-paper-plane"></i> Envoyer ma demande</button>
    </div>

    <!-- Links -->
    <%= render "devise/shared/links" %>
  <% end %>
</div> <!-- /.row-->
