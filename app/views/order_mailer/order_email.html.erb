<html>
  <head>
    <meta content='text/html; charset=UTF-8' http-equiv='Content-Type' />
  </head>
  <body>

    <h2>Résumé de la commande de <%= @user.first_name %> <%= @user.last_name %> : </h2>

    <% @cart.items.each do |item| %>
      <h5><%= item.title %></h5>
      <h3><%= item.price %>€</h3>
    <% end %>

    <!-- Cart total amount -->
    <h2>Quantité : <%= @cart.items.count %></h2>

    <!-- Total Products Price -->
    <p>Prix total : <%= @cart_price %>€</p>

  </body>
</html>